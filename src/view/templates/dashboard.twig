{% extends "base.html.twig" %}
{% block title %} Dashboard {% endblock %}
{% block styles %}
    <!-- Custom styles for this template -->
    <link href="/assets/css/dashboard.css" rel="stylesheet">
{% endblock %}
{% block body %}
    <body>

    {% block header %}
        <header>
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
                <img src="/assets/img/ln.png" class="rounded float-left logo" alt="LateNight Group" width="50" height="50">
                <a class="navbar-brand" href="#">PWBOX</a>
                <ul class="navbar-nav">
                    <li class="nav-item active">
                        <a class="nav-link" href="#">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Settings</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/logout">Logout</a>
                    </li>
                </ul>

                <div class=" ml-auto p-2">
                    <a href="/profile"><img src="{{ user_avatar }}" class="rounded-circle" alt="Avatar" width="50" height="50"></a>
                </div>
            </nav>
        </header>
    {% endblock %}
    {% block content %}
        <nav class="navbar navbar-expand-lg navbar-dark utils">
            <ul class="navbar-nav">
                <li class="nav-item active">

                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#"><img src="/assets/img/folder-storage.png" class="float-left" title="New Folder" alt="New Folder" width="20" height="20"></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#"><img src="/assets/img/delete-button.png" class="float-left" title="Remove Item" alt="Remove Item" width="20" height="20"></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#"><img src="/assets/img/enter-button.png" class="float-left" title="Enter Folder" alt="Enter Folder" width="20" height="20"></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#"><img src="/assets/img/reload-button.png" class="float-left" title="Reload Files" alt="Reload Files" width="20" height="20"></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#"><img src="/assets/img/share-button.png" class="float-left" title="Share Item" alt="Share Item" width="20" height="20"></a>
                </li>
            </ul>
        </nav>

    {% endblock %}
    {% block footer %}
    {% endblock %}

    {% block scripts %}
        {{ parent() }}
    {% endblock %}

</body>
{% endblock %}