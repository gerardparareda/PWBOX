{% extends "base.html.twig" %}
{% block title %} Sign Up {% endblock %}
{% block styles %}
    <!-- Custom styles for this template -->
    <link href="/assets/css/register.css" rel="stylesheet">
{% endblock %}
{% block body %}
<body>
<div class = "container">
    {% block header %}
        <header>
            <div class="container">
                <p class="lead">
                    <a href="/" class="btn btn-secondary btn-sm float-left header">Go back</a>
                </p>
                <div class="media text-center">
                    <img src="/assets/img/ln.png" class="mx-auto d-block justify-content-center" alt="LateNight Group" width="100" height="100">
                </div>
            </div>
        </header>
    {% endblock %}
    {% block content %}
    <div class="d-flex justify-content-center w-50">
        <form id="register-form" class="form-signup" method="POST" onsubmit="return validateForm();" action="/register">
            <img class="mb-4" src="https://getbootstrap.com/assets/brand/bootstrap-solid.svg" alt="" width="72" height="72">
            <h1 class="h3 mb-3 font-weight-normal">Register</h1>
            <label for="inputUsername" class="sr-only">Username</label>
            <input type="text" id="inputUsername" name="inputUsername" class="form-control" placeholder="Username" required autofocus>
            <p id="error-nom" class="error text-danger"></p>
            {% if error_array['errorUsername'] %}
                <p id="error-nom" class="error text-danger">Username can only contain alphanumeric characters and a max length of 20 characters</p>
            {% endif %}
            <label for="inputEmail" class="sr-only">Email address</label>
            <input type="email" id="inputEmail" name="inputEmail" class="form-control" placeholder="Email address" required autofocus>
            <p id="error-email" class="error text-danger"></p>
            {%  if error_array['errorEmail'] %}
                <p id="error-email" class="error text-danger">Invalid email</p>
            {%  endif %}
            <div class="form-row">
                <div class="form-group col-md-2">
                    <label for="inputBirthDay">Day</label>
                    <input type="text" id="inputBirthDay" name="inputBirthDay" class="form-control" placeholder="23" required autofocus>
                    <p id="error-dia" class="error text-danger"></p>
                    {%  if error_array['errorBirth'] %}
                        <p id="error-dia" class="error text-danger">Input a valid date</p>
                    {%  endif %}
                </div>
                <div class="form-group col-md-4">
                    <label for="inputMonthBirth">Month</label>
                    <select id="inputMonthBirth" name="inputMonthBirth" class="form-control">
                        <option selected>January</option>
                        <option>February</option>
                        <option>March</option>
                        <option>April</option>
                        <option>May</option>
                        <option>June</option>
                        <option>July</option>
                        <option>August</option>
                        <option>September</option>
                        <option>October</option>
                        <option>November</option>
                        <option>December</option>
                    </select>
                </div>
                <div class="form-group col-md-6">
                    <label for="inputBirthYear" >Year</label>
                    <input type="text" id="inputBirthYear" name="inputBirthYear" class="form-control" placeholder="1997" required autofocus>
                    <p id="error-any" class="error text-danger"></p>
                </div>
            </div>
            <label for="inputPassword" class="sr-only">Password</label>
            <input type="password" id="inputPassword" name="inputPassword" class="form-control" placeholder="Password" required>
            <label for="inputPasswordConf" class="sr-only">Confirm password</label>
            <input type="password" id="inputPasswordConf" name="inputPasswordConf" class="form-control" placeholder="Confirm password" required>
            <p id="error-password" class="error text-danger"></p>
            {%  if error_array['errorPasswordLength'] %}
                <p id="error-password" class="error text-danger">Password length must be between 6 and 12 characters</p>
            {%  endif %}
            {%  if error_array['errorPasswordCase'] %}
                <p id="error-password" class="error text-danger">Password must contain at least one number and one upper case letter</p>
            {%  endif %}
            {%  if error_array['errorPasswordMismatch'] %}
                <p id="error-password" class="error text-danger">Passowords must match</p>
            {%  endif %}
            {%  if error_array['errorPassword'] %}
                <p id="error-password" class="error text-danger">Invalid password</p>
            {%  endif %}
            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="remember" value="remember-me"> Remember me
                </label>
            </div>
            <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
            <p class="mt-5 mb-3 text-muted">&copy; 2017-2018</p>
        </form>
    </div>

    {% endblock %}
</div>

    {% block scripts %}
        {{ parent() }}
        <script src="/assets/js/register.js"></script>

    {% endblock %}
</body>
{% endblock %}